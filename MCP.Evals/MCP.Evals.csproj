<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <LangVersion>latest</LangVersion>
        <PackAsTool>true</PackAsTool>
        <ToolCommandName>McpEval</ToolCommandName>
        <AssemblyVersion>0.0.1</AssemblyVersion>
        <FileVersion>0.0.1</FileVersion>
        <PublishSingleFile>true</PublishSingleFile>
        <SelfContained>false</SelfContained>

        <!-- NuGet Package Metadata -->
        <PackageId>MCP.Evals</PackageId>
        <PackageVersion>0.0.1</PackageVersion>
        <Authors>Ebram Tawfik</Authors>
        <Company>Ebram Tawfik</Company>
        <Product>MCP.Evals</Product>
        <Description>A comprehensive evaluation framework for testing Model Context Protocol (MCP) servers with language models. Provides automated testing capabilities, multi-LLM support, and built-in metrics collection.</Description>
        <Summary>Evaluation framework for MCP servers with automated testing and multi-language model support</Summary>
        <PackageTags>mcp;model-context-protocol;evaluation;testing;llm;openai;anthropic;azure;cli-tool</PackageTags>
        <PackageProjectUrl>https://github.com/EbramTawfik/MCP.Evals</PackageProjectUrl>
        <RepositoryUrl>https://github.com/EbramTawfik/MCP.Evals</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageReleaseNotes>Initial release of MCP.Evals evaluation framework</PackageReleaseNotes>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <Copyright>Copyright Â© 2025 Ebram Tawfik</Copyright>
    </PropertyGroup>

    <ItemGroup>
        <!-- Official MCP SDK -->
        <PackageReference Include="ModelContextProtocol" Version="0.4.0-preview.1" />
        <PackageReference Include="ModelContextProtocol.Core" Version="0.4.0-preview.1" />

        <!-- Microsoft Extensions - Hosting and DI (Updated versions to match MCP SDK requirements) -->
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.10" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="9.0.10" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.10" />
        <PackageReference Include="Microsoft.Extensions.Http" Version="9.0.10" />

        <!-- Configuration -->
        <PackageReference Include="Microsoft.Extensions.Configuration" Version="9.0.10" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="9.0.10" />
        <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="9.0.10" />
        <PackageReference Include="Microsoft.Extensions.Options" Version="9.0.10" />

        <!-- Logging -->
        <PackageReference Include="Microsoft.Extensions.Logging" Version="9.0.10" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="9.0.10" />
        <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="9.0.10" />
        <!-- CLI Framework -->
        <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />

        <!-- Language Models -->
        <PackageReference Include="OpenAI" Version="2.5.0" />
        <PackageReference Include="Anthropic.SDK" Version="5.6.0" />

        <!-- Configuration Formats -->
        <PackageReference Include="YamlDotNet" Version="16.3.0" />
        <PackageReference Include="System.Text.Json" Version="9.0.10" />

        <!-- Metrics -->
        <PackageReference Include="prometheus-net" Version="8.2.1" />
        <PackageReference Include="prometheus-net.AspNetCore" Version="8.2.1" />
        <PackageReference Include="System.Diagnostics.DiagnosticSource" Version="9.0.10" />

        <!-- Validation -->
        <PackageReference Include="FluentValidation" Version="12.0.0" />
        <PackageReference Include="FluentValidation.DependencyInjectionExtensions" Version="12.0.0" />
        <PackageReference Include="Ardalis.GuardClauses" Version="5.0.0" />
    </ItemGroup>

    <ItemGroup>
        <None Include="../README.md" Pack="true" PackagePath="\" />
    </ItemGroup>

</Project>